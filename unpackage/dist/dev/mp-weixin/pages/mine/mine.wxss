
.myView{
	/* width: calc(100% - 40rpx); */
	padding: 20rpx;
}
.myView .headView{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.myView .headView .headIconView{
	width: 100rpx;
	height: 100rpx;
}
.myView .headView .headIconView image{
	width: 100rpx;
	height: 100rpx;
	line-height: 100rpx;
}
.myView .headView .nickName{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 20rpx;
	height: 100rpx;
	line-height: 100rpx;
}
.myView .headView .icon{
	width: 50rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
}
.myView .scoreView{
	/* width: calc(100% - 40rpx); */
	padding: 20rpx;
}
.myView .scoreView .content{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.myView .scoreView .content .scoreItem{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
}
.myView .scoreView .content .scoreItem .title{
	font-size: 30rpx;
	height: 50rpx;
	line-height: 50rpx;
}
.myView .scoreView .content .scoreItem .score{
	font-size: 22rpx;
	height: 50rpx;
	line-height: 50rpx;
}
.myView .actionView{
	/* width: calc(100% - 40rpx); */
	padding: 20rpx;
	border: 1rpx solid #333333;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
}
.myView .actionView .actionItem{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 70rpx;
	line-height: 70rpx;
	border-bottom: 1rpx solid #eeeeee;
}
.myView .actionView .actionItem:last-child{
	border: 0;
}
.myView .actionView .actionItem .title{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.myView .actionView .actionItem .icon{
	width: 50rpx;
	height: 70rpx;
	line-height: 70rpx;
}

